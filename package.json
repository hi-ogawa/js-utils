{
  "name": "@hiogawa/utils-monorepo",
  "private": true,
  "scripts": {
    "clean": "rm -rf packages/*/dist",
    "dev": "run-p dev:*",
    "build": "pnpm -r build",
    "tsc": "tsc -b",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "test": "pnpm -r --seq test run",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "lint:isort": "pnpm lint-check:isort --fix",
    "lint-check:isort": "isort-ts --git --cache",
    "lint:prettier": "prettier --cache . --write",
    "lint-check:prettier": "prettier --cache . --check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@hiogawa/isort-ts": "1.1.1",
    "@hiogawa/utils-node": "workspace:*",
    "@tsconfig/strictest": "^2.0.1",
    "esbuild": "^0.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "tsup": "^7.1.0",
    "tsx": "^3.12.7",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6",
    "vitest": "^0.32.2"
  },
  "volta": {
    "node": "18.16.0"
  }
}
