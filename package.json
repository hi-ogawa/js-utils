{
  "name": "@hiogawa/utils-monorepo",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "build": "pnpm -r build",
    "tsc": "tsc -b",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "test": "vitest",
    "typedoc": "typedoc --out dist/docs packages/utils/src/index.ts packages/utils-react/src/index.ts",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "lint:isort": "pnpm lint-check:isort --fix",
    "lint-check:isort": "isort-ts --git --cache",
    "lint:prettier": "prettier --cache . --write",
    "lint-check:prettier": "prettier --cache . --check"
  },
  "devDependencies": {
    "@hiogawa/isort-ts": "1.0.0-pre.11",
    "@tsconfig/strictest": "^1.0.2",
    "esbuild": "^0.17.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "tsup": "^6.5.0",
    "typedoc": "^0.23.26",
    "typescript": "^4.9.4",
    "vitest": "^0.27.2"
  },
  "volta": {
    "node": "16.17.0"
  }
}
