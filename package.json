{
  "scripts": {
    "dev": "run-p dev:*",
    "build": "pnpm -r build",
    "tsc": "tsc -b",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "test": "vitest",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "lint:prettier": "prettier --cache . --write",
    "lint-check:prettier": "prettier --cache . --check",
    "lint:eslint": "pnpm lint-check:eslint --fix",
    "lint-check:eslint": "eslint . --cache --cache-location node_modules/.cache/.eslintcache --ext .js,.jsx,.ts,.tsx"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "esbuild": "^0.17.3",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4",
    "vitest": "^0.27.2"
  },
  "volta": {
    "node": "16.17.0"
  }
}
